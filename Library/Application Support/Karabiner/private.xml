<root>

  <item>
    <name>Control_L to Control_L</name>
    <appendix>(+ When you type Control_L only, send F18)</appendix>
    <identifier>private.control_to_control_f18</identifier>
    <autogen>
      __KeyOverlaidModifier__
      KeyCode::CONTROL_L,
      KeyCode::CONTROL_L,
      KeyCode::F18,
    </autogen>
  </item>

  <item>
    <name>Send a delete key event when left shift key pressed alone.</name>
    <identifier>private.shift_l_to_shift_delete</identifier>
    <autogen>
      __KeyOverlaidModifier__
      <!-- from -->
      KeyCode::SHIFT_L,
      <!-- to -->
      KeyCode::SHIFT_L,
      <!-- alone -->
      KeyCode::DELETE,
    </autogen>
  </item>

  <item>
    <name>Makes right shift key delete words.</name>
    <identifier>private.right_delete_to_option_delete</identifier>
    <autogen>
      __KeyOverlaidModifier__
      <!-- from -->
      KeyCode::SHIFT_R,
      <!-- to -->
      KeyCode::SHIFT_R,
      <!-- alone -->
      KeyCode::DELETE,
    </autogen>
  </item>
  
  <item>
    <name>Change delete to option-delete</name>
    <identifier>private.delete_to_option_delete</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::DELETE, ModifierFlag::NONE,
      KeyCode::DELETE, ModifierFlag::OPTION_L
    </autogen>
  </item>


