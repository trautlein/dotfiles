{
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-mixed-spaces-and-tabs": 2,
    "indent": [
      "error",
      2,
      {
        "VariableDeclarator": { "var": 2, "let": 2, "const": 3 },
        "SwitchCase": 1
      }
    ],
    "eqeqeq": [2, "smart"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "key-spacing": 1,
    "block-spacing": 1,
    "comma-spacing": 1,
    "no-multi-spaces": 1,
    "space-before-blocks": 1,
    "keyword-spacing": [1, { "before": true, "after": true }],
    "space-infix-ops": 1,
    "eol-last": 1,
    "comma-style": [2, "last"],
    "quotes": [1, "single"]
  }
}
